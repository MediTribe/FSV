<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">

<log4c version="1.2.1">

	<config>
		<bufsize>0</bufsize>
		<debug level="0"/>
		<nocleanup>0</nocleanup>
	</config>

	<!-- root category ========================================= -->
	<category name="MGC" priority="info" appender="mgc.log"/>

	<!-- default appenders ===================================== -->
	<appender name="stdout" type="stream" layout="basic"/>
	<appender name="stderr" type="stream" layout="basic"/>
	<appender name="syslog" type="syslog" layout="dated"/>
	<appender name="mgcLog4c.log" type="stream" layout="dated"/>

	<!-- default layouts ======================================= -->
	<layout name="basic" type="dated"/>
	<layout name="dated" type="dated"/>
</log4c>
